  "keywords": [
    "react copy text",
    "react qwik copy",
    "qwik-copy-text",
    "html to rich text",
    "react rich text component"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/lmousom/qwik-copy-text.git"
  },
